<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/inicio">

    <!-- Sección Principal -->
    <fragment
        android:id="@+id/inicio"
        android:name="com.sg.proyectofinal.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/areasprotegidas"
        android:name="com.sg.proyectofinal.ui.java.AreasProtegidasFragment"
        android:label="Áreas Protegidas"
        tools:layout="@layout/fragment_areas_protegidas" />

    <fragment
        android:id="@+id/mapaareasprotegidas"
        android:name="com.sg.proyectofinal.ui.java.FragmentMapaAreas"
        android:label="Mapa de Áreas"
        tools:layout="@layout/fragment_mapa_areas" />

    <fragment
        android:id="@+id/detalleAreaFragment"
        android:name="com.sg.proyectofinal.ui.java.FragmentDetalleArea"
        android:label="Detalle del Área"
        tools:layout="@layout/fragment_detalle_area" />

    <!-- Sección Infórmate -->
    <fragment
        android:id="@+id/noticiasmedioambientales"
        android:name="com.sg.proyectofinal.ui.java.NoticiasMedioAmbientalesFragment"
        android:label="Noticias Ambientales"
        tools:layout="@layout/fragment_noticias_medio_ambientales" />

    <fragment
        android:id="@+id/videoseducativos"
        android:name="com.sg.proyectofinal.ui.java.VideosEducativosFragment"
        android:label="Videos Educativos"
        tools:layout="@layout/fragment_videos_educativos" />

    <fragment
        android:id="@+id/medidasambientales"
        android:name="com.sg.proyectofinal.ui.java.MedidasAmbientalesFragment"
        android:label="Medidas Ambientales"
        tools:layout="@layout/fragment_medidas_ambientales" />

    <!-- Sección Participa -->
    <fragment
        android:id="@+id/voluntariados"
        android:name="com.sg.proyectofinal.ui.java.VoluntariadosFragment"
        android:label="Voluntariados"
        tools:layout="@layout/fragment_voluntariados" />

    <!-- Sección Institución -->
    <fragment
        android:id="@+id/sobrenosotros"
        android:name="com.sg.proyectofinal.ui.java.SobreNosotrosFragment"
        android:label="Sobre Nosotros"
        tools:layout="@layout/fragment_sobre_nosotros" />

    <fragment
        android:id="@+id/servicios"
        android:name="com.sg.proyectofinal.ui.java.ServiciosFragment"
        android:label="@string/servicios_title"
        tools:layout="@layout/fragment_servicios" />

    <fragment
        android:id="@+id/equipoministerio"
        android:name="com.sg.proyectofinal.ui.java.EquipoMinisterioFragment"
        android:label="@string/equipo_title"
        tools:layout="@layout/fragment_equipo_ministerio">

        <action
            android:id="@+id/action_equipoMinisterioFragment_to_detalleMiembroFragment"
            app:destination="@id/detalleMiembroFragment"/>
    </fragment>

    <fragment
        android:id="@+id/detalleMiembroFragment"
        android:name="com.sg.proyectofinal.ui.java.DetalleMiembroFragment"
        android:label="@string/perfil_title"
        tools:layout="@layout/fragment_detalle_miembro"/>

    <fragment
        android:id="@+id/acercade"
        android:name="com.sg.proyectofinal.ui.java.acercaDeFragment"
        android:label="Acerca de los Desarrolladores"
        tools:layout="@layout/fragment_acerca_de" />
</navigation>